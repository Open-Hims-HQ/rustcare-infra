# RustCare Infrastructure Environment Variables
# Copy this file to .env and customize for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_PASSWORD=rustcare_dev_password

# =============================================================================
# Mail Server Configuration
# =============================================================================
STALWART_PASSWORD=stalwart_password
MAIL_DOMAIN=rustcare.local
MAIL_ADMIN_EMAIL=admin@rustcare.local
MAIL_ADMIN_PASSWORD=admin123

# =============================================================================
# Object Storage Configuration  
# =============================================================================
MINIO_ROOT_USER=rustcare
MINIO_ROOT_PASSWORD=rustcare_minio_password
MINIO_DOMAIN=localhost

# =============================================================================
# Monitoring Configuration
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=rustcare_grafana_password

# =============================================================================
# Network Configuration
# =============================================================================
# Override default ports if needed
# POSTGRES_PORT=5432
# REDIS_PORT=6379
# MINIO_PORT=9000
# MINIO_CONSOLE_PORT=9001
# NATS_PORT=4222
# JAEGER_UI_PORT=16686
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3001
# MAILHOG_SMTP_PORT=1025
# MAILHOG_UI_PORT=8025
# STALWART_SMTP_PORT=25
# STALWART_SUBMISSION_PORT=587
# STALWART_SUBMISSIONS_PORT=465
# STALWART_IMAP_PORT=993
# STALWART_POP3_PORT=995
# STALWART_SIEVE_PORT=4190
# STALWART_HTTP_PORT=8080

# =============================================================================
# Development vs Production
# =============================================================================
# Set to 'production' for production deployments
ENVIRONMENT=development

# =============================================================================
# Security
# =============================================================================
# Generate strong passwords for production!
# Use: openssl rand -base64 32
ADMIN_SECRET_KEY=change_me_in_production
JWT_SECRET=change_me_in_production

# =============================================================================
# External URLs (for production)
# =============================================================================
# Uncomment and set for production deployments
# POSTGRES_HOST=localhost
# REDIS_HOST=localhost
# MINIO_HOST=localhost
# NATS_HOST=localhost
# JAEGER_HOST=localhost